@page
@model WEB_253502_Garnik.Areas.Admin.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <h1>Details</h1>

    <div>
        <h4>Course</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Course.Name)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Course.Name)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Course.Description)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Course.Description)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Course.Price)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Course.Price)</dd>

            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Course.Image)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Course.Image)</dd>
        </dl>
    </div>

    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Course.Id" class="btn btn-primary">Edit</a>
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
